<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mdc="http://materialdesigninxaml.net/winfx/xaml/themes"
                    >


<!--Centered-->
    <!--Базовые стили расположения элементов по центру.-->
    <Style x:Key="CenterAlignment" TargetType="FrameworkElement">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="CenterContentAligment" TargetType="Control">
        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
    </Style>

    <Style x:Key="CenteredTextBlockStyle" TargetType="TextBlock" >
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!--Buttons-->
    <!--Базовый стиль всех кнопок-->
    <Style x:Key="BaseButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedDarkButton}">
        <Setter Property="Padding" Value="2" />
    </Style>

</ResourceDictionary>