<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Grid>
        <TabControl Name="Tb_Main">
            
            <!--#region BOOKS-->
            <TabItem Header="Книги">
                <Grid Name="Grid_Books">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.3*"/>
                    </Grid.RowDefinitions>
                    <ListView Grid.Row="0"
                              ItemsSource="{Binding Books}"
                              SelectedItem="{Binding SelectedBook}"  
                              
                              >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn                                  
                                    Header="Название"
                                    DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn 
                                    Header="Авторы"
                                    DisplayMemberBinding="{Binding AuthorsShort}"/>
                                <GridViewColumn 
                                    Header="Страниц"
                                    DisplayMemberBinding="{Binding NumberPages}"/>
                                <GridViewColumn 
                                    Header="Дата публикации"
                                    DisplayMemberBinding="{Binding PublicationDate}"/>
                                <GridViewColumn
                                    Header="Жанр"
                                    DisplayMemberBinding="{Binding Genre.Name}"/>
                                <GridViewColumn 
                                    Header="Стеллаж"
                                    DisplayMemberBinding="{Binding Rack.Name}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                </Grid>
                
            </TabItem>
            <!--#endregion-->  
            
            <!--#region REQUESTS-->
            <TabItem Header="Заявки" >

            </TabItem>
            <!--#endregion-->
            
            <!--#region READERS-->
            <TabItem Header="Читатели">

            </TabItem>
            <!--#endregion-->
            
            <!--#region DIAGRAMS-->
            <TabItem Header="Диаграммы">

            </TabItem>
            <!--#endregion-->
        </TabControl>

    </Grid>
</Window>
